{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es6"],
    "module": "Node16",
    "rootDir": "src/lib",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "files": ["src/lib/index.ts"],
  "exclude": ["./dist"]
}
